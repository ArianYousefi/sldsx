<aura:component access="GLOBAL">
    <ltng:require styles="/resource/sdsx__sds/assets/styles/salesforce-design-system-sds.css"/>
    <aura:attribute name="label" type="String" access="GLOBAL" description="The text to display on the node."/>	
    <aura:attribute name="role" type="String" access="GLOBAL" default="group" description="The role of the treeGroup - tree, group."/>	
    <aura:attribute name="expanded" type="Boolean" access="GLOBAL" default="false" description="Indicates that the treeGroup is expanded."/>	
    <aura:attribute name="nested" type="Boolean" access="GLOBAL" default="false" description="Indicates that the treeGroup is nested."/>	
    <aura:attribute name="class" type="String" access="GLOBAL" description="The class(es) to add."/>	
    <aura:attribute name="style" type="String" access="GLOBAL" description="The style(s) to add."/>	
    <aura:attribute name="treeGroupClass" type="String" access="GLOBAL" description="Override class(es)."/>
    
    <aura:attribute name="gen_class" type="String" description="Generated class for the treeGroup."/>

    <aura:handler name="init" value="{!this}" action="{!c.update}"/>
    <aura:handler name="change" value="{!v.expanded}" action="{!c.update}"/>

	<ul class="{!v.gen_class}" role="{!v.role}">
        {!v.body}
    </ul>
</aura:component>